{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "module":"NodeNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "node_modules",
    "dist"
  ]
}